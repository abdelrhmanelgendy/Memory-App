<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BooksApp" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimaryVariant">@color/wpink</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/dpink</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/FragmentBackGroung</item>
        <item name="colorPrimaryDark">#FF9800</item>
        <item name="colorPrimary">@color/wgray</item>

        <item name="android:windowAnimationStyle" >@style/AnimationStyle</item>
    </style>


