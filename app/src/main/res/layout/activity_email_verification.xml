<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.EmailVerification">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif-medium"
            android:padding="5dp"
            android:text="@string/send_verification"
            android:textColor="@color/dpink"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/emailVerification_TV_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-thin"

            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailVerification_TV_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />




        <Button

            android:id="@+id/emailVerification_btnLater"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/circled_buttons"
            android:fontFamily="sans-serif-thin"
            android:text="Later"
            android:textSize="20sp"

            android:textStyle="bold"
            android:theme="@style/PinkButtons"
            android:visibility="visible"

            />
        <Button
            android:id="@+id/emailVerification_resendVirification"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/circled_buttons"
            android:fontFamily="sans-serif-thin"
            android:text="resend verification"
            android:textSize="20sp"
            android:theme="@style/PinkButtons"
            android:textStyle="bold"

            android:visibility="visible" />
        <Button
            android:id="@+id/emailVerification_btnResend"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/circled_buttons"
            android:fontFamily="sans-serif-thin"
            android:text="check verify"
            android:textSize="20sp"

            android:textStyle="bold"

            android:visibility="visible" />
    </LinearLayout>
</layout>