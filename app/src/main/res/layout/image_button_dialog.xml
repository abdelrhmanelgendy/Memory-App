<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@color/FragmentBackGroung">


        <TextView
            android:id="@+id/txtdisplay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"

            android:layout_marginTop="19dp"
            android:text="what to do with this Image ?"
            android:textColor="@color/sub2TextColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/button_dialog_TV_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtdisplay1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="15dp"

            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:text="View"
            android:textColor="@color/mainTextColor"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/button_dialog_TV_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtdisplay1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="31dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Cancel"
            android:layout_marginLeft="14dp"

            android:textColor="@color/mainTextColor"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/button_dialog_TV_replace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtdisplay1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="80dp"

            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:text="Replace"
            android:textColor="@color/mainTextColor"
            android:textSize="22sp" />

    </RelativeLayout>


