<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/FragmentBackGroung"
        android:orientation="vertical"
        tools:context=".ui.SignUpActivity"

        >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/SignUpActivity_txtViewConnectioDialog"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/FragmentBackGroung"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:transitionName="@string/memoryLogoTransitionName">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:src="@drawable/dots"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/splashScreen_dots" />

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:src="@drawable/board"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/splashScreen_board" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/sub2TextColor"
                    android:textCursorDrawable="@color/sub2TextColor"
                    app:boxStrokeColor="@color/sub2TextColor"
                    app:hintTextColor="@color/sub2TextColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/SignUpActivity_ET_emailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/emailaddress"
                        android:imeOptions="actionSend|flagNoEnterAction"
                        android:inputType="textEmailAddress"
                        android:textAlignment="viewStart"
                        android:textColor="@color/mainTextColor"
                        android:textColorHint="@color/sub2TextColor"
                        android:textCursorDrawable="@color/sub2TextColor"
                        android:textSize="18dp" />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/sub2TextColor"
                    android:textCursorDrawable="@color/sub2TextColor"
                    app:boxStrokeColor="@color/sub2TextColor"
                    app:hintTextColor="@color/sub2TextColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/SignUpActivity_ET_userName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/username"
                        android:inputType="textPersonName"
                        android:textAlignment="viewStart"
                        android:textColor="@color/mainTextColor"
                        android:textColorHint="@color/sub2TextColor"
                        android:textCursorDrawable="@color/sub2TextColor"
                        android:textSize="18dp" />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/sub2TextColor"
                    android:textCursorDrawable="@color/sub2TextColor"
                    app:boxStrokeColor="@color/sub2TextColor"
                    app:hintTextColor="@color/sub2TextColor"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/mainTextColor"


                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/loginActivity_ET_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:textAlignment="viewStart"
                        android:textColor="@color/mainTextColor"
                        android:textColorHint="@color/sub2TextColor"
                        android:textCursorDrawable="@color/sub2TextColor"
                        android:textSize="18dp" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColorHint="@color/sub2TextColor"
                    android:textCursorDrawable="@color/sub2TextColor"
                    app:boxStrokeColor="@color/sub2TextColor"
                    app:hintTextColor="@color/sub2TextColor"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/SignUpActivity_ET_Age"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/age"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textColor="@color/mainTextColor"
                        android:textColorHint="@color/sub2TextColor"
                        android:textCursorDrawable="@color/sub2TextColor"
                        android:textSize="18dp"

                        app:passwordToggleTint="@color/mainTextColor" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/signUpActivity_TV_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center_horizontal"
                    android:text="invalid email address"
                    android:textAlignment="textEnd"
                    android:textColor="#FF0004"
                    android:visibility="gone"
                    tools:ignore="RtlCompat" />


                <Button
                    android:id="@+id/SignUpActivity_btn_signUp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="50dp"
                    android:backgroundTint="@color/dpink"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/CreateAccount"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/SignUpActivity_txtViewConnectioDialog"
            layout="@layout/dialog_connection"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

