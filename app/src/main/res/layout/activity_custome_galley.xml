<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CustomeGalley">

    <LinearLayout
        android:id="@+id/customGallery_LinearBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/darkBlue"
        android:orientation="horizontal"
        app:titleTextColor="@color/white">

        <ImageView
            android:id="@+id/customeGallery_btnBack"
            android:layout_width="30sp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/customeGallery_txtChoosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="tap to choose"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/customeGallery_btnOk"
            android:layout_width="150dp"
            android:layout_height="50dp"

            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="OK"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:ignore="RtlCompat" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customGallery_rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBlue" />

</LinearLayout>